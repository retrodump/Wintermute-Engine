; $EDITOR_PROJECT_ROOT_DIR$ ..\..\..\

SCENE {
  NAME="$$SCENE_NAME$$"
  CAPTION=""
  SCRIPT="scenes\$$SCENE_NAME$$\scr\scene_init.script"
  SCRIPT="scripts\scene.script"
  
  ; ----- editor settings
  EDITOR_MARGIN_H=100
  EDITOR_MARGIN_V=100
  EDITOR_COLOR_FRAME { 136,136,136,224 }
  EDITOR_COLOR_ENTITY_SEL { 255,0,0,255 }
  EDITOR_COLOR_REGION_SEL { 255,0,0,255 }
  EDITOR_COLOR_BLOCKED_SEL { 255,0,0,255 }
  EDITOR_COLOR_WAYPOINTS_SEL { 255,0,0,255 }
  EDITOR_COLOR_ENTITY { 0,128,0,255 }
  EDITOR_COLOR_REGION { 0,0,255,255 }
  EDITOR_COLOR_BLOCKED { 128,0,128,255 }
  EDITOR_COLOR_WAYPOINTS { 0,0,255,255 }
  EDITOR_COLOR_SCALE { 0,255,0,255 }
  EDITOR_SHOW_REGIONS=TRUE
  EDITOR_SHOW_BLOCKED=TRUE
  EDITOR_SHOW_ENTITIES=TRUE
  EDITOR_SHOW_SCALE=TRUE
  
  ; ----- waypoints
  
  ; ----- layers
  LAYER {
    NAME="main"
    CAPTION=""
    MAIN=TRUE
    WIDTH=800
    HEIGHT=600
    ACTIVE=TRUE
    EDITOR_SELECTED=TRUE

    ENTITY {
      NAME="background"
      CAPTION=""
      ACTIVE=TRUE
      X=0
      Y=0
      SCALABLE=FALSE
      REGISTRABLE=FALSE
      SHADOWABLE=FALSE
      EDITOR_SELECTED=TRUE
      SPRITE="scenes\$$SCENE_NAME$$\background.bmp"
    }  

    REGION {
      NAME="floor"
      CAPTION=""
      BLOCKED=FALSE
      DECORATION=FALSE
      ACTIVE=TRUE
      SCALE=0
      ALPHA_COLOR { 255,255,255 }
      ALPHA = 255
      EDITOR_SELECTED=FALSE
      POINT {50,50}
      POINT {750,50}
      POINT {750,550}
      POINT {50,550}
    }
  }


  ; ----- scale levels
  SCALE_LEVEL {
    Y=300
    SCALE=70
  }
  SCALE_LEVEL {
    Y=600
    SCALE=100
  }
  
  ; ----- free entities
}
